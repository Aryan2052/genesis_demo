# Genesis — Environment Variables
# Copy this file to .env and fill in your keys

# ── Chain Configuration (USER PICKS WHICH CHAIN TO MONITOR) ─────────────
# For local Hardhat: http://127.0.0.1:8545 (default)
# For Ethereum mainnet: https://mainnet.infura.io/v3/YOUR_KEY
# For Polygon: https://polygon-rpc.com
# For Arbitrum: https://arb1.arbitrum.io/rpc
# For BSC: https://bsc-dataseed.binance.org
RPC_URL=http://127.0.0.1:8545
CHAIN_NAME=localhost
CHAIN_ID=31337

# RPC Provider Keys (for mainnet/testnet usage)
INFURA_API_KEY=your_infura_key_here
ALCHEMY_API_KEY=your_alchemy_key_here

# Database Configuration (Phase 3 - SQLite)
DATABASE_PATH=data/genesis.db

# API Server (Phase 3)
API_PORT=3000
API_HOST=localhost

# Notification Channels (Phase 4)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
WEBHOOK_URL=
WEBHOOK_SECRET=
CONSOLE_ALERTS=true
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY=1000

# System
LOG_LEVEL=info
DEFAULT_CHAIN=ethereum
